<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="233dp"
        android:background="@android:color/white"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@mipmap/bg_bank"/>

        <com.zxdc.utils.library.view.CircleImageView
            android:id="@+id/img_head"
            android:layout_width="40.5dp"
            android:layout_height="40.5dp"
            android:src="@mipmap/yanbao"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/tv_bank_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="宁夏燕宝慈善基金会"
            android:textColor="@android:color/white"
            android:textSize="17sp"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="60dp"/>

        <TextView
            android:id="@+id/tv_bank_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="燕宝建设银行卡"
            android:textSize="10sp"
            android:textColor="@android:color/white"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="41dp"/>

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:background="@drawable/bg_white"
            android:text="已通过"
            android:textSize="12sp"
            android:textColor="@color/color_FA4D4F"
            android:gravity="center"
            android:paddingRight="7dp"
            android:paddingLeft="7dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="18dp"
            android:layout_marginRight="12dp"/>

        <TextView
            android:id="@+id/tv_bank_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="622686 56564878 ****"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="72dp"/>

        <TextView
            android:id="@+id/tv_cardholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_bank_code"
            android:text="持卡人姓名：刘德华"
            android:textSize="14sp"
            android:textColor="@color/color_333333"
            android:layout_marginTop="53dp"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:id="@+id/tv_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_bank_code"
            android:text="手机号：15022938377"
            android:textSize="14sp"
            android:textColor="@color/color_333333"
            android:layout_marginTop="79dp"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:id="@+id/tv_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_bank_code"
            android:text="身份证号：2347234938782743924"
            android:textSize="14sp"
            android:textColor="@color/color_333333"
            android:layout_marginTop="104.5dp"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:id="@+id/tv_play1"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:background="@drawable/bg_btn"
            android:text="变更银行卡"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_bank_code"
            android:layout_marginTop="58dp"
            android:layout_marginRight="12dp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_play1"
            android:layout_marginTop="10dp"
            android:layout_marginRight="12dp">

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_play2"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:background="@drawable/bg_btn"
                android:text="去验证"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:gravity="center" />

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_look_audit"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="查看审核记录"
                android:textColor="#F71016"
                android:textSize="14sp"
                android:drawableRight="@mipmap/red_next"
                android:gravity="center_vertical"/>

        </RelativeLayout>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#60000000"/>

    </RelativeLayout>

</LinearLayout>
