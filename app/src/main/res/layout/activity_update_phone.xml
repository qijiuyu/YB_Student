<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F4F5F6">

    <include layout="@layout/head"/>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:background="@android:color/white"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="12dp"
        android:text="您输入的当前账号的验证邮箱是 "
        android:textSize="14sp"
        android:textColor="@color/color_333333"
        android:gravity="center"
        android:lineSpacingExtra="5dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:background="@android:color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邮箱验证码"
            android:textColor="@color/color_333333"
            android:textSize="14sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13sp"/>

        <EditText
            android:id="@+id/et_email_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:background="@null"
            android:layout_marginLeft="97dp"
            android:hint="请输入验证码"
            android:textSize="14sp"
            android:textColor="@color/color_333333"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:maxLength="6"/>

        <TextView
            android:id="@+id/tv_send_email"
            android:layout_width="79dp"
            android:layout_height="28dp"
            android:background="@drawable/bg_smscode"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:text="获取验证码"
            android:textSize="12sp"
            android:textColor="@color/color_FA4D4F"
            android:gravity="center"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:background="@android:color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新手机号"
            android:textColor="@color/color_333333"
            android:textSize="14sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13sp"/>

        <EditText
            android:id="@+id/et_mobile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:background="@null"
            android:layout_marginLeft="87dp"
            android:hint="请输入您的新手机号码"
            android:textSize="14sp"
            android:textColor="@color/color_333333"
            android:maxLength="11"
            android:inputType="phone"
            android:digits="0987654321xX"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:background="@android:color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="图形验证码"
            android:textColor="@color/color_333333"
            android:textSize="14sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13sp"/>

        <EditText
            android:id="@+id/et_code_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:background="@null"
            android:layout_marginLeft="97dp"
            android:hint="请输入图形验证码"
            android:textSize="14sp"
            android:textColor="@color/color_333333"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"/>

        <ImageView
            android:id="@+id/img_code"
            android:layout_width="79dp"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:background="@android:color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="短信验证码"
            android:textColor="@color/color_333333"
            android:textSize="14sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13sp"/>

        <EditText
            android:id="@+id/et_code_mobile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:background="@null"
            android:layout_marginLeft="97dp"
            android:hint="请输入验证码"
            android:textSize="14sp"
            android:textColor="@color/color_333333"
            android:inputType="number"
            android:maxLength="6"/>

        <TextView
            android:id="@+id/tv_send_mobile"
            android:layout_width="79dp"
            android:layout_height="28dp"
            android:background="@drawable/bg_smscode"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:text="获取验证码"
            android:textSize="12sp"
            android:textColor="@color/color_FA4D4F"
            android:gravity="center"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/bg_btn"
        android:layout_marginTop="70dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:text="确定"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:gravity="center"/>


</LinearLayout>
