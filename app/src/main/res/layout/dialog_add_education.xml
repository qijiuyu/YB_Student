<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#90000000"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:clickable="true"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_rel_border"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="学校类型"
                android:textSize="14sp"
                android:textColor="@color/color_333333"/>

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/bg_memo"
                android:layout_marginLeft="15dp"
                android:hint="请选择学校类型"
                android:textSize="13sp"
                android:textColor="@android:color/black"
                android:paddingLeft="7dp"
                android:paddingRight="15dp"
                android:maxLines="1"
                android:drawableRight="@mipmap/bottom_sj"
                android:gravity="center_vertical"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:background="@drawable/bg_rel_border"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="所在地区"
                android:textSize="14sp"
                android:textColor="@color/color_333333"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp">

                <TextView
                    android:id="@+id/tv_province"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:drawableRight="@mipmap/bottom_sj"
                    android:paddingRight="7dp"
                    android:maxLines="1"
                    android:hint="省"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:textColor="@android:color/black"
                    android:textSize="13sp"
                    android:background="@drawable/bg_memo"/>

                <TextView
                    android:id="@+id/tv_city"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:drawableRight="@mipmap/bottom_sj"
                    android:paddingRight="7dp"
                    android:maxLines="1"
                    android:hint="市"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:textColor="@android:color/black"
                    android:textSize="13sp"
                    android:background="@drawable/bg_memo"/>

                <TextView
                    android:id="@+id/tv_area"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:drawableRight="@mipmap/bottom_sj"
                    android:paddingRight="7dp"
                    android:hint="区"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:textColor="@android:color/black"
                    android:textSize="13sp"
                    android:background="@drawable/bg_memo"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:background="@drawable/bg_rel_border"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="所在学校"
                android:textSize="14sp"
                android:textColor="@color/color_333333"/>

            <TextView
                android:id="@+id/tv_school"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/bg_memo"
                android:layout_marginLeft="15dp"
                android:hint="请选择所在学校"
                android:textSize="13sp"
                android:textColor="@android:color/black"
                android:paddingLeft="7dp"
                android:paddingRight="15dp"
                android:maxLines="1"
                android:drawableRight="@mipmap/bottom_sj"
                android:gravity="center_vertical"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_faculty"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:background="@drawable/bg_rel_border"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="院系名称"
                android:textSize="14sp"
                android:textColor="@color/color_333333"/>

            <TextView
                android:id="@+id/tv_faculty"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/bg_memo"
                android:layout_marginLeft="15dp"
                android:hint="请选择院系名称"
                android:textSize="13sp"
                android:textColor="@android:color/black"
                android:paddingLeft="7dp"
                android:paddingRight="15dp"
                android:maxLines="1"
                android:drawableRight="@mipmap/bottom_sj"
                android:gravity="center_vertical"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_specialty"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:background="@drawable/bg_rel_border"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="专业名称"
                android:textSize="14sp"
                android:textColor="@color/color_333333"/>

            <TextView
                android:id="@+id/tv_specialty"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/bg_memo"
                android:layout_marginLeft="15dp"
                android:hint="请选择专业名称"
                android:textSize="13sp"
                android:textColor="@android:color/black"
                android:paddingLeft="7dp"
                android:paddingRight="15dp"
                android:maxLines="1"
                android:drawableRight="@mipmap/bottom_sj"
                android:gravity="center_vertical"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_class"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:background="@drawable/bg_rel_border"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="班级"
                android:textSize="14sp"
                android:textColor="@color/color_333333"/>

            <EditText
                android:id="@+id/et_class"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/bg_memo"
                android:layout_marginLeft="43dp"
                android:hint="请输入班级"
                android:textSize="13sp"
                android:textColor="@android:color/black"
                android:paddingLeft="7dp"
                android:paddingRight="15dp"
                android:maxLines="1"
                android:gravity="center_vertical"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:background="@drawable/bg_rel_border"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="学历"
                android:textSize="14sp"
                android:textColor="@color/color_333333"/>

            <TextView
                android:id="@+id/tv_education"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/bg_memo"
                android:layout_marginLeft="43dp"
                android:hint="请选择学历"
                android:textSize="13sp"
                android:textColor="@android:color/black"
                android:paddingLeft="7dp"
                android:paddingRight="15dp"
                android:maxLines="1"
                android:drawableRight="@mipmap/bottom_sj"
                android:gravity="center_vertical"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="入学时间"
                android:textSize="14sp"
                android:textColor="@color/color_333333"/>

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/bg_memo"
                android:layout_marginLeft="15dp"
                android:hint="请选择入学时间"
                android:textSize="13sp"
                android:textColor="@android:color/black"
                android:paddingLeft="7dp"
                android:paddingRight="15dp"
                android:maxLines="1"
                android:drawableRight="@mipmap/select_time"
                android:gravity="center_vertical"/>

        </LinearLayout>

       <TextView
           android:id="@+id/tv_add"
           android:layout_width="match_parent"
           android:layout_height="40dp"
           android:background="@color/color_FA4D4F"
           android:layout_marginTop="25dp"
           android:text="确定"
           android:textColor="@android:color/white"
           android:textSize="14sp"
           android:gravity="center"/>

    </LinearLayout>

</RelativeLayout>
