<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9f9f9"
    android:orientation="vertical">

    <include layout="@layout/head"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新银行卡号"
            android:textSize="15sp"
            android:textColor="@color/color_333333"/>

        <EditText
            android:id="@+id/et_bank_code"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:background="@android:color/white"
            android:layout_marginLeft="15dp"
            android:hint="请输入新银行卡号"
            android:textColor="@color/color_333333"
            android:textSize="15sp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:maxLines="1"
            android:inputType="number"
            android:digits="0987654321"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="35dp"
        android:text="新银行照片信息"
        android:textSize="15sp"
        android:textColor="@color/color_333333"/>
    
    <ImageView
        android:id="@+id/img_bank"
        android:layout_width="248dp"
        android:layout_height="102dp"
        android:src="@mipmap/add_photo_icon"
        android:scaleType="fitXY"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请确认上传的银行卡是燕宝卡。办理燕宝卡请到“银川西城支行“补办"
        android:textSize="10sp"
        android:textColor="@color/color_999999"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="变更申请单"
            android:textSize="15sp"
            android:textColor="@color/color_333333"/>

        <ImageView
            android:id="@+id/img_apply"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@mipmap/add_photo_icon"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*请下载申\n请模版并填\n写拍照上传"
            android:textSize="10sp"
            android:textColor="@color/color_999999"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="23dp"/>
        
        <ImageView
            android:id="@+id/img_template"
            android:layout_width="56.7dp"
            android:layout_height="69dp"
            android:src="@mipmap/file_icon"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="申请单模\n版下载"
            android:textSize="10sp"
            android:textColor="@color/color_999999"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="37dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/bg_btn"
        android:layout_marginTop="70dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:text="提交"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:gravity="center"/>

</LinearLayout>
