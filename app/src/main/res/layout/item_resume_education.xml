<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/tv_school_type"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="学校类型： 大学"
            android:textSize="14sp"
            android:textColor="@color/color_333333"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/tv_school_address"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="所在地区：宁夏回族自治区兴庆区"
            android:textSize="14sp"
            android:textColor="@color/color_333333"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/tv_school_name"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="所在学校：宁夏大学"
            android:textSize="14sp"
            android:textColor="@color/color_333333"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/tv_faculty_name"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="院系名称：计算机院"
            android:textSize="14sp"
            android:textColor="@color/color_333333"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/tv_specialty_name"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="专业名称：软件工程"
            android:textSize="14sp"
            android:textColor="@color/color_333333"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="入学时间：2019年9月"
            android:textSize="14sp"
            android:textColor="@color/color_333333"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:gravity="center_vertical"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#f9f9f9"/>

    </LinearLayout>

</LinearLayout>
