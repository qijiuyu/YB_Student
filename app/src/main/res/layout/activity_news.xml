<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <include layout="@layout/head"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/tv_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:drawableTop="@mipmap/gonggao"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="公告"
            android:textSize="12sp"
            android:textColor="@color/color_FA4D4F"/>

        <TextView
            android:id="@+id/tv_audit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:drawableTop="@mipmap/audit_user"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="审核消息"
            android:textSize="12sp"
            android:textColor="@color/color_666666"/>

        <TextView
            android:id="@+id/tv_money_issue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:drawableTop="@mipmap/zijin"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="资金发放"
            android:textSize="12sp"
            android:textColor="@color/color_666666"/>

        <TextView
            android:id="@+id/tv_survey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:drawableTop="@mipmap/wenjuan"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="问卷调查"
            android:textSize="12sp"
            android:textColor="@color/color_666666"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#f9f9f9"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>

</LinearLayout>
