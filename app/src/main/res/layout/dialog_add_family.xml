<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/half_transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:clickable="true"
        android:background="@android:color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="与本人关系"
                android:textColor="@color/color_333333"
                android:textSize="14sp"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/tv_relation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="请选择关系"
                android:textColor="@color/color_333333"
                android:textSize="14sp"
                android:gravity="right"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:drawableRight="@mipmap/more_icon"
                android:drawablePadding="5dp"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:background="@drawable/bg_rel_border"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="姓名"
                android:textSize="14sp"
                android:textColor="@color/color_333333"/>

            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/bg_memo"
                android:layout_marginLeft="30dp"
                android:hint="请输入姓名"
                android:textSize="13sp"
                android:textColor="@android:color/black"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:maxLines="1"
                android:gravity="center_vertical"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:background="@drawable/bg_rel_border"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="单位"
                android:textSize="14sp"
                android:textColor="@color/color_333333"/>

            <EditText
                android:id="@+id/et_unit"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/bg_memo"
                android:layout_marginLeft="30dp"
                android:hint="请输入单位"
                android:textSize="13sp"
                android:textColor="@android:color/black"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:maxLines="1"
                android:gravity="center_vertical"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:background="@drawable/bg_rel_border"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="职业"
                android:textSize="14sp"
                android:textColor="@color/color_333333"/>

            <EditText
                android:id="@+id/et_position"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/bg_memo"
                android:layout_marginLeft="30dp"
                android:hint="请输入职业"
                android:textSize="13sp"
                android:textColor="@android:color/black"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:maxLines="1"
                android:gravity="center_vertical"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:background="@drawable/bg_rel_border"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="主要收入来源"
                android:textSize="14sp"
                android:textColor="@color/color_333333"/>

            <EditText
                android:id="@+id/et_entry"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/bg_memo"
                android:layout_marginLeft="20dp"
                android:hint="请输入主要收入来源"
                android:textSize="13sp"
                android:textColor="@android:color/black"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:maxLines="1"
                android:gravity="center_vertical"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingRight="15dp"
            android:paddingLeft="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="是否接受过燕宝奖励"
                android:textSize="14sp"
                android:textColor="@color/color_333333"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/tv_reward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="否"
                android:tag="0"
                android:textColor="@color/color_333333"
                android:textSize="14sp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:drawableRight="@mipmap/more_icon"
                android:drawablePadding="5dp"
                android:layout_marginRight="5dp"/>

        </RelativeLayout>

       <TextView
           android:id="@+id/tv_add"
           android:layout_width="match_parent"
           android:layout_height="40dp"
           android:background="@color/color_FA4D4F"
           android:layout_marginTop="25dp"
           android:text="确定"
           android:textColor="@android:color/white"
           android:textSize="14sp"
           android:gravity="center"/>

    </LinearLayout>

</RelativeLayout>
