<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/white">

        <RelativeLayout
            android:id="@+id/rel"
            android:layout_width="133dp"
            android:layout_height="95dp"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/img_head"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/aa"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:background="@color/color_049640"
                android:text="审核通过"
                android:textSize="9sp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018年大学生批次"
            android:textSize="16sp"
            android:textColor="@color/color_333333"
            android:textStyle="bold"
            android:layout_marginLeft="144dp"
            android:layout_marginRight="10dp"
            android:maxLines="1"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="考入学校：银川第一高中"
            android:textSize="14sp"
            android:textColor="@color/color_666666"
            android:layout_marginLeft="144dp"
            android:layout_marginRight="15dp"
            android:layout_below="@id/tv_name"
            android:layout_marginTop="5dp"
            android:maxLines="2"
            android:ellipsize="end"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提交时间：2018.01.01 "
            android:textSize="12sp"
            android:textColor="@color/color_666666"
            android:drawableLeft="@mipmap/time_icon"
            android:drawablePadding="5dp"
            android:layout_marginLeft="144dp"
            android:layout_alignBottom="@id/rel"/>


    </RelativeLayout>

</LinearLayout>
